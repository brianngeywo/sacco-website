          <%= link_to 'Sign Up', new_user_registration_path, class:"nav-link" %>
        </li>        
      </ul>
    </div>
  </div>
</nav>

<!--Intro Section-->
<section class="view intro-2">
  <div class="mask rgba-stylish-strong h-100 d-flex justify-content-center align-items-center">
    <div class="container">
      <div class="row">
        <div class="col-xl-5 col-lg-6 col-md-10 col-sm-12 mx-auto mt-lg-5">
          

          <!--Form with header-->
          <div class="card wow fadeIn" data-wow-delay="0.3s">
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <!--Header-->
                <div class="form-header aqua-gradient">
                  <h3><i class="fa fa-user mt-2 mb-2"></i> Log in:</h3>
                </div>

                <!--Body-->
                <div class="md-form">
                  <i class="fa fa-envelope prefix white-text"></i>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"orangeForm-email"  %>
                  <label for="orangeForm-email">Enter email</label>
                </div>

                <div class="md-form">
                  <i class="fa fa-lock prefix white-text"></i>
                  <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"orangeForm-pass" %>
                  <label for="orangeForm-pass">Your password</label>
                </div>

                <div class="text-center">
                  <button class="btn aqua-gradient btn-lg">Login</button>
                  <hr>
                  <div class="inline-ul text-center d-flex justify-content-center">
                    <a class="p-2 m-2 fa-lg tw-ic"><i class="fa fa-twitter white-text"></i></a>
                    <a class="p-2 m-2 fa-lg li-ic"><i class="fa fa-linkedin-in white-text"> </i></a>
                    <a class="p-2 m-2 fa-lg ins-ic"><i class="fa fa-instagram white-text"> </i></a>
                  </div>
                </div>
              <% end %>
<%= render "devise/shared/links" %>
            </div>
          </div>
          <!--/Form with header-->

        </div>
      </div>
    </div>
  </div>
</section>

